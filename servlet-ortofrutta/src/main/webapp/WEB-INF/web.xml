<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>gestioneOrtofrutta</servlet-name>
        <servlet-class>it.dstech.ortofrutta.GestioneOrtofrutta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>gestioneOrtofrutta</servlet-name>
        <url-pattern>/Homepage</url-pattern>
    </servlet-mapping>
    
    
    
      <servlet>
        <servlet-name>gestioneMagazzino</servlet-name>
        <servlet-class>it.dstech.ortofrutta.GestioneMagazzino</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>gestioneMagazzino</servlet-name>
        <url-pattern>/Magazzino</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>aggiungiProdotto</servlet-name>
        <servlet-class>it.dstech.ortofrutta.AggiungiProdotto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>aggiungiProdotto</servlet-name>
        <url-pattern>/AggiungiProdotto</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>rimuoviProdotto</servlet-name>
        <servlet-class>it.dstech.ortofrutta.RimuoviProdotto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>rimuoviProdotto</servlet-name>
        <url-pattern>/RimuoviProdotto</url-pattern>
    </servlet-mapping>
    
    
     <servlet>
        <servlet-name>modificaProdotto</servlet-name>
        <servlet-class>it.dstech.ortofrutta.ModificaProdotto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modificaProdotto</servlet-name>
        <url-pattern>/ModificaProdotto</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>stampaProdotti</servlet-name>
        <servlet-class>it.dstech.ortofrutta.Stampa</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>stampaProdotti</servlet-name>
        <url-pattern>/Stampa</url-pattern>
    </servlet-mapping>
    
    
    <welcome-file-list>
	<welcome-file>/Homepage.jsp</welcome-file>
	</welcome-file-list>
    
    
</web-app>